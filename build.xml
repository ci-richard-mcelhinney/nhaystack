<module
    edition = "j2me"
    name = "nhaystack"
    bajaVersion="0"
    preferredSymbol = "nh"
    description = "Niagara Haystack"
    vendor = "Project Haystack"
    vendorVersion = "1.1.0" 
>

    <!-- Dependencies -->
    <dependency name="alarm"     vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="baja"      vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="bajaui"    vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="bql"       vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="control"   vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="driver"    vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="file"      vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="fox"       vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="gx"        vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="history"   vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="net"       vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="web"       vendor="Tridium" vendorVersion="3.5"/>
    <dependency name="workbench" vendor="Tridium" vendorVersion="3.5"/>

    <!-- Packages -->
    <package name="nhaystack"                   doc="true"/>
    <package name="nhaystack.collection"        doc="true"/>
    <package name="nhaystack.site"              doc="true"/>
    <package name="nhaystack.res"               doc="true"/>
    <package name="nhaystack.server"            doc="true"/>
    <package name="nhaystack.server.storehouse" doc="true"/>
    <package name="nhaystack.ui"                doc="true"/>
    <package name="nhaystack.ui.view"           doc="true"/>
    <package name="nhaystack.util"              doc="true"/>

    <!-- Resources -->
    <resources name="nhaystack/res/*.csv" />
    <resources name="nhaystack/res/*.txt" />
    <resources name="nhaystack/res/equip-points/*.txt" />
    <resources name="nhaystack/icons/*.*" />

