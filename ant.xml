<project default="download" basedir=".">

  <target name="javadoc">
    <delete dir="javadoc"/>    
    <mkdir dir="javadoc"/>    
    <javadoc
      access="protected"
      destdir="javadoc"
      author="true"
      version="true"
      use="true"
      windowtitle="Niagara Haystack">
  
      <fileset dir="src">
          <include name="**/*.java"/>
      </fileset>

    </javadoc>
  </target>

  <target name="download">

